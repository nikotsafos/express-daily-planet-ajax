<h1>Articles</h1>

<a href="/articles/new" class="btn btn-primary">New Article</a>

<% articles.forEach(function(article, idx) { %>
  <div class="well">
    <a href="/articles/<%= idx %>"><h2><%= article.title %></h2></a>
    <a id="edit-btn" href="/articles/edit/<%=idx%>" class="btn btn-warning">
      Edit
    </a>
    <a id="delete-btn" href="/articles" class="btn btn-danger">
      Delete
    </a>
  </div>
<% }); %>
